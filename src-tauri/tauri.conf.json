{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Glide",
  "version": "../package.json",
  "identifier": "com.wkdev.glide",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Glide Settings",
        "width": 560,
        "height": 640,
        "visible": false,
        "transparent": true,
        "decorations": true,
        "resizable": false,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": ["nsis", "msi"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEY1QTY1QTBCRjM1MEU3RUUKUldUdTUxRHpDMXFtOWJHWVhCU25uTTZMbnh5UzRMWExZc29JL3lKTjc0ajRjTDRUdTF5WWlGNDYK",
      "endpoints": [
        "https://github.com/wkdev/glide/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
